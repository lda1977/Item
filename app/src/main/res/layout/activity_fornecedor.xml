<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="bottom"
    tools:context=".sistema.FornecedorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtBemVindo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txtBemVindo"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtResulEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/ic_baseline_email_verd_24"
            android:drawableLeft="@drawable/ic_baseline_email_verd_24"
            android:drawablePadding="10dp"
            android:gravity="fill_vertical"
            android:hint="@string/txtResulEmail"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#770707"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            >

        </TextView>

        <TextView
            android:id="@+id/txtInformativo"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="@string/txtInformacao"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/purple_200"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:drawableRight="@drawable/ic_baseline_send_24"
            android:gravity="center"
            android:shadowColor="#9E2424"
            android:text="@string/btnPreco"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_reslta"
            android:layout_width="match_parent"
            android:layout_height="504dp"
            android:background="#C7F1CE"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</ScrollView>